{
  "name": "webhooklab-backend",
  "version": "1.0.0",
  "description": "WebhookLab - Webhook inspection API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx run src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "engines": {
    "node": ">=24.14.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.0",
    "pg": "^8.13.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
